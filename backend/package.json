{
  "name": "@berkeley-goggles/backend",
  "version": "1.0.0",
  "description": "Berkeley Goggles backend API server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "start:prod": "prisma migrate deploy && npm run db:seed && node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:seed:dev": "tsx src/scripts/seed.ts",
    "setup:railway": "tsx scripts/setup-sample-images.ts",
    "seed:railway": "npm run setup:railway && npm run db:seed",
    "reset-data": "tsx scripts/reset-comparison-data.ts",
    "migrate:samples": "tsx scripts/migrate-samples-to-r2.ts",
    "migrate:samples:dry": "tsx scripts/migrate-samples-to-r2.ts --dry-run",
    "fix:r2:prod": "tsx scripts/complete-r2-update.ts",
    "fix:r2:dry": "tsx scripts/complete-r2-update.ts --dry-run",
    "map:r2:robust": "tsx scripts/robust-r2-mapping.ts",
    "map:r2:dry": "tsx scripts/robust-r2-mapping.ts --dry-run",
    "map:r2:clean": "tsx scripts/robust-r2-mapping.ts --clean",
    "verify:r2": "tsx scripts/verify-r2-mapping.ts",
    "diagnose:prod": "tsx scripts/production-diagnostic.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.947.0",
    "@aws-sdk/s3-request-presigner": "^3.947.0",
    "@prisma/client": "^5.7.1",
    "aws-sdk": "^2.1504.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.12",
    "sharp": "^0.33.1",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
