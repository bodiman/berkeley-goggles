{
  "name": "berkeley-goggles",
  "version": "1.0.0",
  "description": "Berkeley Goggles - Social beauty ranking app",
  "private": true,
  "workspaces": [
    "backend",
    "web",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "npm run dev --workspace=@berkeley-goggles/backend",
    "dev:web": "npm run dev --workspace=@berkeley-goggles/web",
    "build": "npm run build:backend && npm run build:web",
    "build:backend": "npm run build --workspace=@berkeley-goggles/backend",
    "build:web": "npm run build --workspace=@berkeley-goggles/web",
    "start:backend": "npm run start --workspace=@berkeley-goggles/backend",
    "start:prod": "npm run start:prod --workspace=@berkeley-goggles/backend",
    "test": "npm run test:backend",
    "test:backend": "npm run test --workspace=@berkeley-goggles/backend",
    "lint": "npm run lint:backend && npm run lint:web",
    "lint:backend": "npm run lint --workspace=@berkeley-goggles/backend",
    "lint:web": "npm run lint --workspace=@berkeley-goggles/web",
    "typecheck": "npm run typecheck:backend && npm run typecheck:web",
    "typecheck:backend": "npm run typecheck --workspace=@berkeley-goggles/backend",
    "typecheck:web": "npm run typecheck --workspace=@berkeley-goggles/web",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "author": "Berkeley Goggles Team",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run typecheck && npm test"
    }
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@vladmandic/face-api": "^1.7.15",
    "claude": "^0.1.1"
  }
}
